@model List<MyApp.Models.Item>
@{
    ViewData["Title"] = "Lista Wydatków";
}

<div class="banner">
    <p>
        Items banner
    </p>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text"><strong>Price:</strong> @item.Price.ToString("N2") $</p>
                        <p class="card-text"><strong>Serial Number:</strong> @item.SerialNumber?.Name</p>
                        <p class="card-text"><strong>Category:</strong> @item.Category?.Name</p>
                        <p class="card-text">
                            <strong>Clients:</strong>
                            @foreach (var client in item.ItemClients)
                            {
                                @client.Client.Name
                                <br />
                            }
                        </p>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .banner {
        background-color: lightcoral;
        border: 2px solid darkred;
        padding: 10px;
        margin-bottom: 20px;
        text-align: center;
        font-size: 1.5em;
        font-weight: bold;
        color: white;
    }

    .container {
        margin-top: 20px;
    }
</style>
